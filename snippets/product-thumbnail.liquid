<div class="product-thumbnail">
  <div class="product-image">
      <a href="{{ product.url }}">
        <img src="{{ product.featured_image.src | product_img_url: 'medium' }}"/>
      </a>
  </div>
  <div class="product-title">
      <a href="{{ product.url }}">
        {{ product.title }}
      </a>
  </div>
  <div class="product-price">
      {{ product.price | money }}
  </div>
</div>